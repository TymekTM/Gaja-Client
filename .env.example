# GAJA Client Environment Configuration
# Copy this file to .env and fill in your actual values

# ==============================================================================
# Server Connection (Optional - will use GUI setup if not provided)
# ==============================================================================
GAJA_SERVER_URL=ws://localhost:8001/ws/client1
GAJA_SERVER_HOST=localhost
GAJA_SERVER_PORT=8001

# ==============================================================================
# API Keys (Optional - for local processing)
# ==============================================================================
# OpenAI for local STT/TTS if needed
OPENAI_API_KEY=your_openai_api_key_here

# Azure Speech for local processing
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region_here

# ==============================================================================
# Audio Configuration (Optional - auto-detected if not set)
# ==============================================================================
AUDIO_INPUT_DEVICE=default
AUDIO_OUTPUT_DEVICE=default
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1

# Wake word settings
WAKE_WORD=gaja
WAKE_WORD_SENSITIVITY=0.6
STT_SILENCE_THRESHOLD_MS=2000

# ==============================================================================
# Speech Settings
# ==============================================================================
# TTS Settings
TTS_ENGINE=edge-tts
TTS_VOICE=en-US-AriaNeural
TTS_SPEED=1.0

# STT Settings  
STT_ENGINE=faster-whisper
STT_MODEL=base
STT_LANGUAGE=auto

# ==============================================================================
# User Interface
# ==============================================================================
# Client UI settings
UI_LANGUAGE=en
UI_THEME=dark
OVERLAY_ENABLED=true
OVERLAY_POSITION=top-right

# ==============================================================================
# Performance Settings
# ==============================================================================
# CPU/GPU settings
DEVICE=auto  # auto, cpu, cuda
MAX_MEMORY_MB=512
CPU_LIMIT_PERCENT=50

# Processing settings
LOCAL_PROCESSING_PREFERRED=true
GPU_ACCELERATION=auto
THREAD_COUNT=auto

# ==============================================================================
# Privacy Settings
# ==============================================================================
STORE_AUDIO=false
ANALYTICS_ENABLED=false
CRASH_REPORTING=true

# ==============================================================================
# Development Settings
# ==============================================================================
CLIENT_DEBUG=false
CLIENT_LOG_LEVEL=INFO
PYTEST_DISABLE_AUDIO=false
